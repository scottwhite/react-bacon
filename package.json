{
  "name": "react-bacon",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "babel-jest": "^14.1.0",
    "babel-root-import": "^4.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^14.1.0",
    "react-addons-test-utils": "^15.3.0",
    "react-scripts": "0.2.1",
    "redux-mock-store": "^1.1.2"
  },
  "dependencies": {
    "node-uuid": "^1.4.7",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-saga": "^0.11.0"
  },
  "scripts": {
    "start": "node-sass ./src/ -w -o ./src/ & react-scripts start",
    "build": "node-sass ./src/ -o ./src/ && react-scripts build",
    "eject": "react-scripts eject",
    "test": "env NODE_PATH=./node_modules/react-scripts/node_modules jest"
  },
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "react"
    ],
    "plugins": [
      [
        "babel-root-import"
      ]
    ]
  },
  "jest": {
    "automock": false,
    "testPathDirs": [
      "tests"
    ],
    "testRegex": "tests/.*\\.test.js$",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/tests/style-mock.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/file-mock.js"
    }
  }
}
